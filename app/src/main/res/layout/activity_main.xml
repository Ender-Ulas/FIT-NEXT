<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIT NEXT"
        android:textColor="@color/yazı"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Egzersizler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Beslenme"
        android:layout_width="316dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/buton"
        android:text="BESLENME"
        android:textColor="@color/yazı"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Egzersizler" />

    <Button
        android:id="@+id/btn_Egzersizler"
        android:layout_width="316dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/buton"
        android:text="EGZERSİZLER"
        android:textColor="@color/yazı"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Beslenme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>